  <cron>
    <entry entry_id="bdMails_bounce" cron_class="bdMails_CronEntry_Bounce" cron_method="run" active="1"><![CDATA[{"day_type":"dom","dom":["-1"],"hours":["5"],"minutes":["6"]}]]></entry>
